            <input type="number" name="monthly_payment" id="monthly_payment" placeholder="monthly payment..." required>
          </div>
          <br>
          <div class="field">
            <label>parents cellphone</label>
            <input type="number" name="parent_number" id="parent_number" placeholder="parent number..." required>
          </div>
          <br>
          <div class="field">
            <label>home address </label>
            <input type="text" name="home_address" id="home_address" placeholder="home address..." required>
          </div>
          <br>
          <div class="field">
            <label>picture </label>
            <input type="text" name="img" id="img" placeholder="img..." required>
          </div>
      </div>
      <br>
      <button class="ui button" value="enviar" type="submit">Submit</button>
      </form>
    </div>
    <%}%>
    <%if(b2){%>
      <div class="ui stackable grid" style="margin: 10px"></div>
      <%for(let i=0;i < arr.length;i++){%>
